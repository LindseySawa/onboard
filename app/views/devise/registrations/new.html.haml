=render "shared/header"
.wrap-signup
  .signup
    .signup-top
      %h2 新規登録
    
    .signup-main
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .signup-main__top  
          .signup-main__top--left
            .field
              = f.label :ユーザー名
              %br/
              = f.text_field :username, autofocus: true, autocomplete: "username"
              .line
            .field
              = f.label :アドレス
              %br/
              = f.email_field :email, autofocus: true, autocomplete: "email"
              .line
            .field
              = f.label :パスワード
              - if @minimum_password_length
                %em
                  (#{@minimum_password_length} 文字以上)
              %br/
              = f.password_field :password, autocomplete: "new-password"
              .line
            .field
              = f.label :パスワード確認用
              %br/
              = f.password_field :password_confirmation, autocomplete: "new-password"
              .line

          .signup-main__top--right
            .field
              = f.label :好きな旅行先
              %br/
              = f.text_field  :fav_country
              .line
            .field
              = f.label :オススメスポット
              %br/
              = f.text_field :fav_spot
              .line
            -# .field
            -#   = f.label :ホームページ
            -#   %br/
            -#   = f.url_field :sns_hp
            -#   .line
            .field
              = f.label :よく撮影する被写体
              %br/
              = f.text_field :fav_pic, placeholder: "例：風景"
              .line
            .field
              = f.label :よく使用する撮影機器
              %br/
              = f.text_field :fav_cam, placeholder: "例：Nikon"
              .line

        .signup-main__bottom
          .field
            %p アイコン
            .field-icon
              = f.label :avatar, class: "icon" do
                -if @user.avatar.url.present?
                  =image_tag @user.avatar.url, alt: "avatar-preview", class: "avatar-preview"
                -else
                  = icon('fa','camera-retro')
                = f.file_field :avatar, class: "avatar"
          .field
            = f.label :自己紹介
            %br/
            %br/
            = f.text_area  :introduction


        .actions
          = f.submit "サインアップ"
          .link
            = render "devise/shared/links"

