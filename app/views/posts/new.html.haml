= render "shared/header"

.new
  .new_main
    = form_for(@post, url: posts_path) do |f|
      .main
        .main__left
          = f.label :image, for: "upload-image", class: "image-preview" do
            = icon('fa', 'camera')
            = f.file_field :image, class: "hidden", id: "upload-image"
            -# = f.hidden_field :image_cache
            -# = f.label :image
            %br
        .main__right
          .field
            = f.label :タイトル
            = f.text_field :title, placeholder: "【例】ハリウッド通り"
            %br

          .field
            = f.label :国名
            -# = f.grouped_collection_select :country_id, Area.all, :countries, :name, :id, :name, include_blank: true
            = f.text_field :country, placeholder: "【例】アメリカ"
            -# %span  ※国名はバーの中から選択
            %br
          .field
            = f.label :都市名
            = f.text_field :city, placeholder: "【例】ロサンゼルス"
            %br
          .field
            = f.label :撮影方法
            = f.text_field :how, placeholder: "【例】一眼レフ"
            %br
          .discription
            -# = f.label :概要
            = f.text_area :discription, placeholder: '写真について&#13;&#10;&#13;&#10;【例】&#13;&#10;いつ頃撮影したのか？&#13;&#10;そこまでのアクセス方法は？&#13;&#10;近くに〇〇という美味しいお店があった！などのプチ情報も！'.html_safe
      .bottom
        .submit
          = f.submit "SUBMIT"

= render "shared/footer"

